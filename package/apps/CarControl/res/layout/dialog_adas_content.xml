<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="424dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="186dp"
        android:layout_height="424dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_country_dialog_close" />

        <TextView
            android:id="@+id/tv_asda_dialog_tab1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/bg_dialog_tab_item"
            android:gravity="center"
            android:textColor="@color/theme_blue"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_asda_dialog_tab2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:textColor="@color/tab_unselect_text_color"
            android:textSize="22sp" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#6b89a9db" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="424dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_adas1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/ll_adas2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>