<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="37dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/light_control"
            android:textColor="@color/title_text_color"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_smart_high_beam_tips"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_tips" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_smart_high_beam"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/bg_segmented_view"
        android:gravity="center_vertical"
        android:minWidth="213dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_smart_high_beam"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="23dp"
            android:src="@drawable/ic_full_beam_close" />

        <TextView
            android:id="@+id/tv_smart_high_beam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="23dp"
            android:text="@string/smart_high_beam"
            android:textColor="@color/tab_unselect_text_color"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>