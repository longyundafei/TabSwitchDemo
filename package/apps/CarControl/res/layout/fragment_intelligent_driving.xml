<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:id="@+id/ll_lcc_lane_keeping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/cruise_assist"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/iv_cruise_assist_tips"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_tips" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/bg_intensity_view"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="29dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_lcc_lane_keeping"
                            android:layout_width="56dp"
                            android:layout_height="31dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_switch_on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/lcc_lane_keeping"
                            android:textColor="@color/title_text_color"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_avoid_big_cars"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_avoid_big_cars"
                            android:layout_width="56dp"
                            android:layout_height="31dp"
                            android:layout_marginStart="92dp"
                            android:src="@drawable/ic_switch_on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/avoid_big_cars"
                            android:textColor="@color/title_text_color"
                            android:textSize="22sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lane_departure_assist_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/lane_departure_assist"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/iv_lane_departure_assist_tips"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_tips" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_intensity_view"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/lane_departure_warning"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:id="@+id/ll_lane_departure_warning"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="38dp"
                        android:background="@drawable/bg_segmented_view"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_lane_close"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingVertical="10dp"
                            android:text="@string/close"
                            android:textColor="@color/tab_unselect_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_warning_only"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingVertical="10dp"
                            android:text="@string/warning_only"
                            android:textColor="@color/tab_unselect_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_vibration"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/vibration"
                            android:textColor="@color/tab_unselect_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_warning_and_vibration"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/warning_and_vibration"
                            android:textColor="@color/tab_unselect_text_color"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_lane_correction_assistance"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_intensity_view"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_lane_correction_assistance"
                        android:layout_width="56dp"
                        android:layout_height="31dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_switch_on" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="@string/lane_correction_assistance"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_emergency_lane_keeping_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/emergency_lane_keeping"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/iv_emergency_lane_keeping_tips"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_tips" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_emergency_lane_keeping"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/bg_intensity_view"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_emergency_lane_keeping"
                        android:layout_width="56dp"
                        android:layout_height="31dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_switch_on" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="@string/emergency_lane_keeping"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_forward_warning_aid_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/forward_warning_aid"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/iv_forward_warning_aid_tips"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_tips" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_intensity_view"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:text="@string/forward_collision_warning_and_emergency_braking"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:id="@+id/ll_collision_warning_braking"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_segmented_view"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/collision_warning_braking_close"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingVertical="10dp"
                            android:text="@string/close"
                            android:textColor="@color/tab_unselect_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/collision_warning"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/warning_only"
                            android:textColor="@color/tab_unselect_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/braking"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/brake_only"
                            android:textColor="@color/tab_unselect_text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/collision_warning_braking"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/early_warning_and_braking"
                            android:textColor="@color/tab_unselect_text_color"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lateral_warning_aid_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/lateral_warning_aid"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/iv_lateral_warning_aid_tips"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_tips" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_blind_spot_detection"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_intensity_view"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp">

                    <ImageView
                        android:id="@+id/iv_blind_spot_detection"
                        android:layout_width="56dp"
                        android:layout_height="31dp"
                        android:src="@drawable/ic_switch_on" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="16dp"
                        android:text="@string/blind_spot_detection"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_door_opening_warning"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_intensity_view"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp">

                    <ImageView
                        android:id="@+id/iv_door_opening_warning"
                        android:layout_width="56dp"
                        android:layout_height="31dp"
                        android:src="@drawable/ic_switch_on" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="16dp"
                        android:text="@string/door_opening_warning"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_backward_blind_aid_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/backward_blind_aid"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/iv_backward_blind_aid_tips"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_tips" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_intensity_view"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:id="@+id/ll_rear_collision_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp">

                        <ImageView
                            android:id="@+id/iv_rear_collision_warning"
                            android:layout_width="56dp"
                            android:layout_height="31dp"
                            android:src="@drawable/ic_switch_on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/rear_collision_warning"
                            android:textColor="@color/title_text_color"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_astern_traverse_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp">

                        <ImageView
                            android:id="@+id/iv_astern_traverse_warning"
                            android:layout_width="56dp"
                            android:layout_height="31dp"
                            android:src="@drawable/ic_switch_on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="16dp"
                            android:text="@string/astern_traverse_warning"
                            android:textColor="@color/title_text_color"
                            android:textSize="22sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_limiting_aid_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/intelligent_rate_limiting_aid"
                        android:textColor="@color/title_text_color"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/iv_intelligent_rate_limiting_aid_tips"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_tips" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_intensity_view"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_speed_limit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/iv_speed_limit"
                                android:layout_width="56dp"
                                android:layout_height="31dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_switch_on" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:text="@string/speed_limit_identification_aid"
                                android:textColor="@color/title_text_color"
                                android:textSize="22sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="27dp"
                            android:background="@drawable/bg_segmented_btn"
                            android:gravity="center"
                            android:paddingStart="16dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="6dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="22sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_over_speed_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_over_speed_warning"
                            android:layout_width="56dp"
                            android:layout_height="31dp"
                            android:layout_marginStart="92dp"
                            android:src="@drawable/ic_switch_on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:text="@string/over_speed_warning"
                            android:textColor="@color/title_text_color"
                            android:textSize="22sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

